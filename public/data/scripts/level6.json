        "scene2": {
            "background": "/images/bg/office.jpg",
            "dialogues": [
                { "character": "工藤彌什", "avatars": [{ "src": "/images/chara/01.png", "position": { "x": 30, "y": 60 } }], "text": "解開了！" },
                { "character": "耶比大熊", "avatars": [{ "src": "/images/chara/06.png", "position": { "x": 70, "y": 60 } }], "text": "這是什麼？和月暈船日記！？呃...暈水源同學！？" },
                { "character": "和月有幸", "avatars": [{ "src": "/images/chara/11.png", "position": { "x": 70, "y": 60 } }], "text": "啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊！！！！！！！！" },
                { "character": "和月有幸", "avatars": [{ "src": "/images/chara/11.png", "position": { "x": 70, "y": 60 } }], "text": "我忘了我的手機還在投影啊" },
                { "character": "和月有幸", "avatars": [{ "src": "/images/chara/11.png", "position": { "x": 70, "y": 60 } }], "text": "拜託你們，忘了他，千萬不要說出去" },
                { "character": "學生會長", "avatars": [{ "src": "/images/chara/08.png", "position": { "x": 70, "y": 60 } }], "text": "我有你的把柄了，下次幫我代班" },
                { "character": "和月有幸", "avatars": [{ "src": "/images/chara/11.png", "position": { "x": 70, "y": 60 } }], "text": "會長！！！！！！" },
                { "character": "耶比大熊", "avatars": [{ "src": "/images/chara/06.png", "position": { "x": 70, "y": 60 } }], "text": "抱歉啊和月同學，不小心看到你的秘密了" },
                { "character": "你", "avatars": [{ "src": "/images/chara/04.png", "position": { "x": 50, "y": 60 } }], "text": "現在檔案沒事了，你先連個網把它備份起來吧" },
                { "character": "工藤彌什", "avatars": [{ "src": "/images/chara/01.png", "position": { "x": 30, "y": 60 } }], "text": "但是還不能放心，不知道怪盜XD有沒有搶先把檔案備份走了" },
                { "character": "耶比大熊", "avatars": [{ "src": "/images/chara/06.png", "position": { "x": 70, "y": 60 } }], "text": "說得對，如果檔案被複製過了那也還沒辦法解決問題，必須得找出怪盜XD的真實身分" },
                { "character": "工藤彌什", "avatars": [{ "src": "/images/chara/01.png", "position": { "x": 30, "y": 60 } }], "text": "現在是時候來推理怪盜XD的犯案手法，以及他的真實身分了" }
            ],
            "next": "scene3"
        },
        "scene3": {
            "background": "/images/bg/office.jpg",
            "dialogues": [
                { "character": "你", "avatars": [{ "src": "/images/chara/04.png", "position": { "x": 20, "y": 60 } }], "text": "調查時間" }
            ],
            "interactions": [
                {
                    "type": "choice",
